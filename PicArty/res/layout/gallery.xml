<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/lg_gallery"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="vertical" >
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/lg_bottom"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#000000" >

        <LinearLayout
            android:id="@+id/l_border_top"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#b1b1b1" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l_border_top"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            >

            <ImageButton
                android:id="@+id/btn_g_share"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/btn_style_share" />

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
				android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/go_to_gallery_landscape_style" />

            <ImageButton
                android:id="@+id/btn_g_show_camera"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/btn_style_photo" />

            <ImageButton
                android:id="@+id/btn_g_delete"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
				android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/btn_style_delete" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>